<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.hw3.ui.CoursesActivity">

    <EditText
        android:id="@+id/courseActivityIdStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="id student" />

    <EditText
        android:id="@+id/courseActivityIdFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="id faculty"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/courseActivityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="course name"
        android:minHeight="48dp" />


    <Button
        android:id="@+id/courseActivityBtAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="add"
        app:strokeColor="#8BC34A" />

    <Button
        android:id="@+id/courseActivityBtShowCoursesByStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="show student courses (by id)" />

    <Button
        android:id="@+id/courseActivityBtUpdateCourseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="update (by name)" />

    <Button
        android:id="@+id/courseActivityBtShowAllCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="view all" />

    <Button
        android:id="@+id/courseActivityBtDeleteByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="delete" />


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>